<resources>
    <style name="Base.Theme.AppManager" parent="Theme.Material3Expressive.DayNight.NoActionBar">
        <item name="isMaterial3Theme">true</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:windowAnimationStyle">@null</item>

        <item name="preferenceTheme">@style/PreferenceTheme</item>

        <item name="android:dialogTheme">@style/ThemeOverlay.Material3Expressive.MaterialAlertDialog</item>
        <item name="android:alertDialogTheme">@style/ThemeOverlay.Material3Expressive.MaterialAlertDialog</item>
        <item name="android:alertDialogStyle">@style/ThemeOverlay.Material3Expressive.MaterialAlertDialog</item>
        <item name="android:dialogPreferenceStyle">@style/ThemeOverlay.Material3Expressive.MaterialAlertDialog</item>
        <item name="alertDialogTheme">@style/ThemeOverlay.Material3Expressive.MaterialAlertDialog</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Material3Expressive.MaterialAlertDialog</item>

        <item name="dialogCornerRadius">28dp</item>
    </style>

    <style name="Theme.AppManager" parent="Base.Theme.AppManager" />

    <style name="PreferenceTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="android:tint">?colorControlNormal</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialAlertDialog.Rounded" parent="">
        <item name="cornerSize">?cornerRadius</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.ListItem.Single" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.ListItem.Top" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">4dp</item>
        <item name="cornerSizeBottomRight">4dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.ListItem.Middle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.ListItem.Bottom" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">4dp</item>
        <item name="cornerSizeTopRight">4dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
    </style>
</resources>